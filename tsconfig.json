{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "~api": ["src/api"],
      "~assets": ["src/assets"],
      "~components": ["src/components"],
      "~constants": ["src/constants"],
      "~context": ["src/context"],
      "~data": ["src/data"],
      "~fragments": ["src/fragments"],
      "~hooks": ["src/hooks"],
      "~layouts": ["src/layouts"],
      "~pages": ["src/pages"],
      "~slices": ["src/slices"],
      "~styles": ["src/styles"],
      "~templates": ["src/templates"],
      "~utils": ["src/utils"],
      "~schemas": ["sanity/schemas"],
      "~node_modules": ["node_modules"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./sanity/**/*",
    "gatsby-node.js",
    "gatsby-config.js",
    "./plugins/**/*",
    "./custom.d.ts"
  ]
}
